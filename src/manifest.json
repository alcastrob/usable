{
  "name": "usable",
  "description": "Simplify your job seeking",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "usable"
  },
  "content_scripts": [{
    "matches": [
      "https://app.hubspot.com/*"
    ],
    "js": ["contentScript.js"],
    "run_at": "document_end"
  }],
  "manifest_version": 2,
  "icons": {
    "128": "icons/finish-128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/",
    "downloads"
  ]
}